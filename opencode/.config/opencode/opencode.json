{
  "$schema": "https://opencode.ai/config.json",
  "theme": "one-dark",
  "permission": {
    "bash": {
      "*": "ask",
      "git log": "allow",
      "git diff": "allow"
    },
    "edit": "ask",
    "webfetch": "ask",
    "doom_loop": "ask",
    "external_directory": "ask"
  },
  "mcp": {
    "shadcn": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "shadcn@latest", "mcp"]
    }
  }
}
